<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body p-4 text-white bg-dark rounded-0">
        <form action="/edit/{{task._id}}" method="POST">
          <h1 class="text-center">Update a task</h1>
          <div class="form-group mb-3">
            <input
              type="text"
              id="title"
              class="form-control rounded-0 bg-dark text-white"
              name="title"
              placeholder="Title..."
              value="{{task.title}}"
            />
          </div>
          <div class="form-group mb-3">
            <textarea
              id="description"
              name="description"
              class="form-control rounded-0 bg-dark text-white"
              placeholder="Description..."
            >{{task.description}}</textarea>
          </div>

          <button class="btn btn-primary" type="submit">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>